                <LinearLayout
                    android:id="@+id/liner_venderCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_40_dp"
                    android:background="@drawable/text_view_border"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/vendor_other_code"
                        android:layout_weight="0.6"
                        android:background="@color/mmgblue"
                        android:gravity="center"
                        android:text="@string/vendor_code"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/venderCodeEditText"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1.4"
                        android:maxLines="1"
                        android:text=""
                        android:paddingLeft="@dimen/common_10_dp"
                        android:background="@null"

                        android:hint="Please Enter Plumber"
                        android:maxLength="30"
                        android:textSize="@dimen/common_16_dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                </LinearLayout>



    <LinearLayout
        android:id="@+id/liner_materialHandover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_40_dp"
        android:background="@drawable/text_view_border"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/mmgblue"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Removed Material Handover?*"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/removdMaterialSpinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_40_dp"
            android:layout_weight="1.4"
