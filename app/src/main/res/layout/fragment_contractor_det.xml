                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:background="@drawable/text_view_border"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@color/mmgblue"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="@string/name_of_the_fixer"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/contractorNameSpinner"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/common_40_dp"
                            android:layout_weight="1.4"
                            android:spinnerMode="dialog" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_cntrctrEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:background="@drawable/text_view_border"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:background="@color/mmgblue"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Plumber Employee*"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/contractorEmpSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:entries="@array/selectArray"
                            android:spinnerMode="dialog" />

                        <EditText
                            android:id="@+id/contractorEmpEditText"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/common_40_dp"
                            android:paddingLeft="15dp"
                            android:maxLines="1"
                            android:maxLength="30"
                            android:hint="Please Enter Plumber Employee"
                            android:visibility="gone"
                            android:background="@android:drawable/editbox_background_normal"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"

                            android:layout_weight="1.4"
                            />

                    </LinearLayout>

                </LinearLayout>


