<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_preview_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_not_available"
        android:scaleType="fitCenter" />

    <!-- <ImageView
         android:id="@+id/image_preview"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_margin="10dp"
         />-->

    <ImageButton
        android:id="@+id/image_preview_close"
        android:layout_width="@dimen/common_30_dp"
        android:layout_height="@dimen/common_30_dp"
        android:layout_gravity="top|end"
        android:background="#ff0000"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/common_10_dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        />
</FrameLayout>