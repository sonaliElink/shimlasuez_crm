<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        layout="@layout/layout_toolbar"
        tool:ignore="IncludeLayoutParam" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_5_dp">

        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_15_dp"
                        android:layout_marginRight="@dimen/common_15_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.6"
                            android:gravity="start"
                            android:paddingLeft="5dp"
                            android:text="@string/complaint_application_no"
                            android:textColor="#86000000" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_50_dp"
                            android:background="@drawable/text_view_border"
                            android:orientation="horizontal"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="@dimen/common_5_dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:background="@color/mmgblue"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/complaint_application_no"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/msrSpinner"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/common_40_dp"
                                android:layout_weight="1.3"
                                android:spinnerMode="dialog" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.6"
                            android:gravity="start"
                            android:paddingLeft="5dp"
                            android:text="@string/consumer_no_mandatory"
                            android:textColor="#86000000" />

                        <EditText
                            android:id="@+id/et_consumer_account_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_50_dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="15dp"
                            android:gravity=""
                            android:background="@drawable/text_view_border"
                            android:paddingLeft="5dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_get_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55_dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/common_5_dp"
                android:text="@string/get_Details"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_get_details2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55_dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/common_5_dp"
                android:text="@string/get_Details"
                android:layout_below="@id/btn_get_details"
                android:textColor="@color/white"
                android:background="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>