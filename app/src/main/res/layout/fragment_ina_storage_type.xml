<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:overScrollMode="always"
        android:scrollbars="none">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_5_dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_10_dp"
                    android:text="@string/application_number"
                    android:textColor="@color/secondaryColor"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_viewq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/common_10_dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.google.android.material.textfield.TextInputLayout
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/common_10_dp"
                                        android:layout_weight="1"
                                        android:focusable="false"
                                        app:boxCornerRadiusBottomEnd="0dp"
                                        app:boxCornerRadiusBottomStart="0dp"
                                        app:boxCornerRadiusTopEnd="0dp"
                                        app:boxCornerRadiusTopStart="0dp">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/etApplicationNumber"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_gravity="top|center_horizontal"
                                            android:enabled="false"
                                            android:hint="@string/consumer_no_mandatory"
                                            android:inputType="text"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textColorHint="#fff"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.google.android.material.textfield.TextInputLayout
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="@dimen/common_10_dp"
                                        android:layout_weight="1"
                                        android:focusable="false"
                                        app:boxCornerRadiusBottomEnd="0dp"
                                        app:boxCornerRadiusBottomStart="0dp"
                                        app:boxCornerRadiusTopEnd="0dp"
                                        app:boxCornerRadiusTopStart="0dp"
                                        android:layout_marginLeft="5dp">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/etComplaintNo"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_gravity="top|center_horizontal"
                                            android:enabled="false"
                                            android:hint="@string/complaint_application_no"
                                            android:inputType="text"
                                            android:text=""
                                            android:textColor="@color/black"
                                            android:textColorHint="#fff"
                                            android:textSize="14sp" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="@dimen/common_10_dp"
                            android:layout_marginRight="@dimen/common_10_dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            tools:ignore="Suspicious0dp">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1"
                                android:background="@color/main_color"
                                android:visibility="visible" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1"
                                android:background="@color/main_color" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1"
                                android:background="@color/main_color" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            tools:ignore="MissingConstraints">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:text="@string/storage_type"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/nos"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:gravity="center"
                                    android:text="@string/capacity"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:text="@string/overhead_tank"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_overhead_tank_nos"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_overhead_tank_capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:text="@string/ground_tank"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_ground_tank_nos"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_ground_tank_capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:text="@string/under_ground_sump"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_under_ground_sump_nos"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_under_ground_sump_capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:text="@string/grand_total"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_grand_total_nos"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                                <EditText
                                    android:id="@+id/et_grand_total_capacity"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.9"
                                    android:focusable="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:background="@color/main_color" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="0.1dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                            </LinearLayout>



                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/common_10_dp"
                            android:layout_height="@dimen/common_100_dp"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/llSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_consumer_back"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#85C908"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_submit_consumer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_55_dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#85C908"
                android:textAllCaps="false"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
