                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="6dp"
                android:text="Connection Size"
                android:textColor="#86000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                android:focusable="false" />

            <EditText
                android:id="@+id/connSizeTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/mmgblue"
                android:textSize="15sp"
                android:focusable="false"
                android:hint=""
                app:layout_constraintStart_toStartOf="parent"
                android:layout_weight="1.4" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10_dp"
        android:weightSum="1"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="From Node*"
            android:textColor="#86000000" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:text=""
            android:layout_marginRight="5dp"
            android:background="@drawable/text_view_border"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/mmgblue"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="To Node*"
            android:textColor="#86000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="0.5"
            android:text=""
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/text_view_border"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/mmgblue"
            android:textSize="16sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="1"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:text="Primary Mobile*"
            android:textColor="#86000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_40_dp"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:layout_weight="0.5"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/text_view_border"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/mmgblue"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:lineSpacingExtra="6dp"
                android:text="From Node"
                android:textColor="#86000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/etFromNode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center_vertical"
                android:hint=""
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/mmgblue"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="6dp"
                android:text="To Node"
                android:textColor="#86000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                android:focusable="false" />

            <EditText
                android:id="@+id/etToNode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/mmgblue"
                android:textSize="15sp"
                android:singleLine="true"
                android:hint=""
                android:maxLines="1"
                android:maxLength="30"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:text= "House No."
            android:textColor="#86000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:text="GIS BID:"
            android:textColor="#86000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_houseNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_40_dp"
            android:focusable="true"
            android:maxLines="1"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColorHint="@color/text_hint_color"
            android:text=""
            android:background="@android:drawable/editbox_background_normal"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/mmgblue"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/tv_gisBid"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_40_dp"
            android:focusable="true"
            android:maxLines="1"
            android:maxLength="12"
            android:layout_weight="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_"
            android:text=""
            android:singleLine="true"
            android:enabled="true"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:background="@android:drawable/editbox_background_normal"
            android:textColorHint="@color/text_hint_color"
            android:textStyle="bold"
            android:textColor="@color/mmgblue"
            android:textSize="16sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:lineSpacingExtra="6dp"
                android:text="Road / Street"
                android:textColor="#86000000"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/tv_roadName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center_vertical"
                android:hint=""
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/mmgblue"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="6dp"
                android:paddingLeft="5dp"
                android:text="Landmark"
                android:textColor="#86000000"
                android:textSize="13sp"
                android:focusable="false" />

            <EditText
                android:id="@+id/tv_landmarkName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center_vertical"
                android:hint=""
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/mmgblue"
                android:textSize="15sp" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:focusable="false"
                android:lineSpacingExtra="6dp"
                android:text="@string/property_assessement"
                android:textColor="#86000000"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_property_assessement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_40_dp"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/editbox_background_normal"
                android:gravity="center_vertical"
                android:hint=""
