        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_10_dp"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="5dp"
        android:visibility="visible"
        app:cardElevation="5dp">

    <LinearLayout
