                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text="Category Connection*"
                    android:textColor="#86000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/text_view_border"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/mmgblue"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="1"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:paddingLeft="5dp"
                    android:text=" Connection Size*"
                    android:textColor="#86000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:focusable="true"
                        android:inputType="number"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/text_view_border"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/mmgblue"
                        android:textSize="16sp" />


                </LinearLayout>
                <!--As-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.6"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:text="Name of the Consumer"
                        android:textColor="#86000000" />

                    <TextView
                        android:id="@+id/tv_name_of_consumer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:background="@android:drawable/editbox_background_normal"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.6"
                        android:gravity="start"
                        android:paddingLeft="5dp"
                        android:text="Consumer Number"
                        android:textColor="#86000000"  />

                    <EditText
                        android:id="@+id/consumerNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:focusable="false"
                        android:lineSpacingExtra="6dp"
                        android:text="Primary Mobile"
                        android:textColor="#86000000"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/mobTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:textColor="@color/mmgblue"
                        android:textSize="15sp"
                        android:maxLength="10"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:lineSpacingExtra="6dp"
                        android:text="Alternate Mobile:"
                        android:textColor="#86000000"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/alternateNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/mmgblue"
                        android:textSize="15sp"
                        android:hint=""
                        android:maxLength="10"
                        android:inputType="number"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_weight="1.4" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:focusable="false"
                        android:lineSpacingExtra="6dp"
                        android:text="Category Connection"
                        android:textColor="#86000000"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent" />

                    <EditText
                        android:id="@+id/catgryConnTextView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_40_dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/editbox_background_normal"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:enabled="false"
                        android:textColor="@color/mmgblue"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
