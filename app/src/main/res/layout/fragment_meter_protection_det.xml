                                android:layout_height="fill_parent"
                                android:background="@color/main_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <View
