                                android:gravity="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@color/main_color" />

                        </LinearLayout>

                        <LinearLayout
